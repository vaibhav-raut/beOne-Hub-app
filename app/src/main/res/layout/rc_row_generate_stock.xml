<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--*********************************************************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/gs_lot_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/data_table_text_size"
            android:background="@drawable/rectangle_border_fill50"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/gs_stock_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/data_table_text_size"
            android:background="@drawable/rectangle_border_fill50"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/gs_purchased"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/data_table_text_size"
            android:background="@drawable/rectangle_border_fill50"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/gs_to_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/data_table_text_size"
            android:background="@drawable/rectangle_border_fill50"
            android:elevation="2dp"/>

        <EditText
            android:id="@+id/gs_to_stock_gen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:maxLines="1"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/data_table_text_size"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/rectangle_border"
            android:textAppearance="@android:style/Widget.EditText"
            android:elevation="2dp"/>

        <TextView
            android:id="@+id/rs_delete_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:textColor="@color/colorButtonAmber"
            android:textSize="@dimen/data_table_text_size"
            android:background="@drawable/rectangle_border"
            android:textStyle="bold"
            android:text="X"
            android:elevation="2dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>